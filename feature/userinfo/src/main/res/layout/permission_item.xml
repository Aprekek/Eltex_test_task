<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginHorizontal="@dimen/very_small_margin_padding"
	android:layout_marginVertical="@dimen/very_small_margin_padding"
	app:cardCornerRadius="@dimen/zero_size">

	<TextView
		android:id="@+id/permission"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:padding="@dimen/medium_margin_padding"
		tools:text="Some Permission"
		style="@style/Theme.Eltex.DescriptionText"/>
</com.google.android.material.card.MaterialCardView>